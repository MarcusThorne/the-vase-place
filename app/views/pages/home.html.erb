<%# Hero section %>
<div class="relative">
  <%= image_tag("vases.jpg", class: "w-full object-cover h-1/2 responsive-height") %>

  <div class="absolute top-1/2 left-1/2" style="transform: translate(-50%, -50%);">
    <h1 class="text-white text-center uppercase text-6xl md:text-9xl">Free</h1>
    <h1 class="text-white text-center uppercase text-6xl md:text-9xl">Delivery</h1>
    <%= link_to products_path do %>
      <p class="text-white text-2xl border-b-2 border-white w-max mx-auto mt-10" style="text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.5);">Shop Now</p>
    <% end %>
  </div>
</div>

<%# Carousel title %>
<div class="container mx-auto">
  <div class="flex justify-between mx-5 md:mx-20 mt-20">
    <h1 class="text-xl mb-10">Our Favourite Products</h1>
    <div class="space-x-1 flex">
      <i class="fas fa-chevron-left bg-gray-100 text-gray-600 hover:text-gray-900 rounded-3xl p-3 px-4 previous_slide" style="height: max-content;"></i>
      <i class="fas fa-chevron-right bg-gray-100 text-gray-600 hover:text-gray-900 rounded-3xl p-3 px-4 next_slide" style="height: max-content;"></i>
    </div>
  </div>

  <%# Carousel with favourite products %>
  <div class="flex" id="carousel">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="mx-auto relative flex flex-col items-center overflow-hidden card-width">
          <%= image_tag("#{product.image}", class: "w-full image-height object-contain") %>
          <div class="flex justify-between w-full">
            <h1><%= product.name %></h1>
            <p>Â£ <%= product.price %></p>
          </div>
          <p class="text-xs text-gray-400 w-full"><%= product.description %></p>
          <% if user_signed_in? %>
            <i class="far fa-heart top-0 right-0 absolute cursor-pointer" id="heart"></i>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

