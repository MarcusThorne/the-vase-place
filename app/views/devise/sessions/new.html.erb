<div class="md:flex w-full">
  <div class="mx-10 md:mx-0 md:w-1/2 border-b md:border-b-0 md:border-r border-gray-200 mt-10">
    <div class="md:w-1/2 mx-auto py-10">
      <h2 class="text-2xl font-bold">Welcome to theVasePlace.com</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full mb-5", placeholder:"Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class:"w-full mb-5", placeholder:"Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-10">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"w-full py-2 bg-black text-white" %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-xs w-full pl-auto text-gray-500" %><br />
      <% end %>
    </div>
  </div>

  <div class="mx-10 md:mx-0 md:w-1/2 md:border-r border-gray-200 mt-10">
    <div class="md:w-1/2 mx-auto py-10 flex flex-col justify-center h-full">
      <h2 class="mb-5">New to theVasePlace.com?</h2>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="w-full py-2 flex justify-center" style="background: #efe7de;" >
          <%= link_to "Create an Account", new_registration_path(resource_name) %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
