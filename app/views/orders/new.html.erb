<div class="m-5 md:w-3/5 md:m-20">
  <%= form_for @order, remote: true do |f| %>
    <div class="flex flex-col" >
      <div class="w-full flex mb-5" >
        <div class="w-1/2 flex flex-col">
          <%= f.label "First Name" %>
          <%= f.text_field :first_name, placeholder: "First Name", class: "border-gray-200 mt-2" %>
        </div>

        <div class="w-1/2 flex flex-col ml-4">
          <%= f.label "Last Name" %>
          <%= f.text_field :last_name, placeholder: "Last Name", class: "border-gray-200 mt-2" %>
        </div>
      </div>

      <%= f.label "Email" %>
      <%= f.text_field :email, placeholder: "Email Adress", class: "border-gray-200 mt-2 mb-5" %>

      <div class="w-1/2 flex flex-col">
        <%= f.label "Contact Number" %>
        <%= f.text_field :phone, placeholder: "07123 456789", class: "border-gray-200 mt-2" %>
      </div>
      <%= f.submit "Continue", class:"bg-black text-white px-20 py-2 w-max mt-10" %>
    </div>
  <% end %>
</div>
